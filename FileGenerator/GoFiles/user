package models

import (
	"fmt"
)

type User struct {
	ID    int    `gorm:"primaryKey;autoIncrement;not null;unique" json:"id"`
	Username string `json:"Username"`
}

// Champ Username
func (u *User) GetUsername() string {
	return u.Username
}

