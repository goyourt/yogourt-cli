services:
  db:
    container_name: $ProjectName$-db
    image: postgres
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: password
      POSTGRES_DB: mydb
    volumes:
      - db:/data/postgres
    ports:
      - "5432:5432"
    networks:
      - db
    restart: unless-stopped
  cache:
    container_name: $ProjectName$-cache
    image: redis:6.2-alpine
    restart: always
    ports:
      - '6379:6379'
    command: redis-server --save 20 1 --loglevel warning --requirepass cache-key
    volumes:
      - cache:/data
networks:
  db:
    driver: bridge

volumes:
  db:
  cache:
    driver: local